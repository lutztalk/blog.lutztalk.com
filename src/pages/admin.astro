---
// Admin page for Decap CMS
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager - LutzTalk</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      margin: 0;
      padding: 0;
      background: #f5f5f5;
    }
    .admin-header {
      background: #fff;
      border-bottom: 1px solid #e5e7eb;
      padding: 1rem 2rem;
      margin-bottom: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .admin-header h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 600;
      color: #1a1a1a;
    }
    .admin-header .login-button {
      background: #24292e;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.375rem;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
    }
    .admin-header .login-button:hover {
      background: #2f363d;
    }
    .admin-header .login-button svg {
      width: 16px;
      height: 16px;
    }
    .admin-disclaimer {
      background: #fef3c7;
      border: 1px solid #fbbf24;
      border-radius: 0.5rem;
      padding: 1rem;
      margin: 0 2rem 1rem;
      color: #92400e;
    }
    .admin-disclaimer strong {
      display: block;
      margin-bottom: 0.5rem;
    }
    #nc-root {
      max-width: 1200px;
      margin: 0 auto;
    }
    /* Hide Decap CMS logo and branding - aggressive selectors */
    [class*="nc-root"] [class*="logo"],
    [class*="nc-root"] a[href*="decapcms"],
    [class*="nc-root"] a[href*="netlify"],
    [class*="nc-root"] img[alt*="Decap"],
    [class*="nc-root"] img[alt*="Netlify"],
    [class*="nc-root"] svg[class*="logo"],
    a[href*="decapcms.org"],
    a[href*="netlify.com"],
    /* Hide the Decap logo text and icon */
    [class*="nc-root"] [class*="Decap"],
    [class*="nc-root"] [class*="decap"],
    [class*="nc-root"] [class*="logo"] + *,
    [class*="nc-root"] [class*="logo"] ~ *,
    /* Hide specific Decap logo classes */
    [class*="DecapLogoIcon"],
    [class*="exus10f3"],
    [class*="css-rdgl1o-IconWrapper-DecapLogoIcon"],
    [class*="e1jeq5dr1"],
    /* Hide any element containing "Decap" text */
    [class*="nc-root"] *:contains("Decap"),
    /* Hide duplicate CMS instances - keep only the first one */
    #nc-root > div:not(:first-child) {
      display: none !important;
    }
    
    /* Show only the first CMS instance */
    #nc-root > div:first-child {
      display: block !important;
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <h1>Blog Editor</h1>
    <button id="header-login-btn" class="login-button" style="display: none;">
      <svg viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
      Login with GitHub
    </button>
  </div>
  <div class="admin-disclaimer">
    <strong>⚠️ Authorized Personnel Only</strong>
    <p>This is a restricted area. Only authorized personnel with proper GitHub access to this repository may use this interface. Unauthorized access is prohibited.</p>
  </div>
  <div id="nc-root" style="display: none;"></div>
  <script>
    // Function to hide Decap logo but preserve login button
    function hideDecapLogo() {
      const root = document.getElementById('nc-root');
      if (!root) return;
      
      // Hide specific Decap logo classes
      const logoSelectors = [
        '[class*="DecapLogoIcon"]',
        '[class*="exus10f3"]',
        '[class*="css-rdgl1o-IconWrapper-DecapLogoIcon"]',
        '[class*="e1jeq5dr1"]'
      ];
      
      logoSelectors.forEach(selector => {
        const elements = root.querySelectorAll(selector);
        elements.forEach(el => {
          // Skip if inside a button
          if (!el.closest('button') && !el.closest('[role="button"]')) {
            el.style.display = 'none';
            el.style.visibility = 'hidden';
            el.style.opacity = '0';
            el.style.height = '0';
            el.style.width = '0';
          }
        });
      });
      
      // Also hide elements with exactly "Decap" text
      const allElements = root.querySelectorAll('*');
      allElements.forEach(el => {
        // Always skip buttons and anything inside buttons
        if (el.tagName === 'BUTTON' || 
            el.closest('button') || 
            el.closest('[role="button"]') ||
            el.closest('[class*="button"]') ||
            el.closest('[class*="login"]')) {
          return;
        }
        
        const text = (el.textContent || '').trim();
        const className = (el.className || '').toString();
        
        // Hide if text is exactly "Decap" or has logo classes
        if ((text === 'Decap' && text.length === 5) || 
            (className.includes('DecapLogoIcon') || className.includes('exus10f3'))) {
          el.style.display = 'none';
          el.style.visibility = 'hidden';
          el.style.opacity = '0';
        }
      });
    }
    
    // Prevent duplicate initialization
    if (!window.CMS_INITIALIZED) {
      window.CMS_INITIALIZED = true;

      // Suppress React errors - catch and ignore removeChild errors
      const originalRemoveChild = Node.prototype.removeChild;
      Node.prototype.removeChild = function(child) {
        try {
          return originalRemoveChild.call(this, child);
        } catch (e) {
          if (e instanceof Error && e.message && e.message.includes('not a child')) {
            return child;
          }
          throw e;
        }
      };

      // Set site_id for authentication
      const siteId = window.location.hostname === 'localhost' 
        ? 'localhost:4321' 
        : window.location.hostname;

      // Override fetch to modify auth URLs
      const originalFetch = window.fetch;
      window.fetch = function(...args) {
        if (args[0] && typeof args[0] === 'string' && args[0].includes('site_id=demo.decapcms.org')) {
          args[0] = args[0].replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
        }
        return originalFetch.apply(this, args);
      };

      // Override window.open to fix auth URLs
      const originalOpen = window.open;
      window.open = function(url, ...rest) {
        if (url && typeof url === 'string' && url.includes('site_id=demo.decapcms.org')) {
          url = url.replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
        }
        return originalOpen.call(this, url, ...rest);
      };

      // Prevent auto-init by overriding CMS.init before script loads
      window.CMS = window.CMS || {};
      const originalInit = window.CMS.init;
      let initCalled = false;
      window.CMS.init = function() {
        if (initCalled) {
          console.warn('CMS.init already called, skipping duplicate');
          return;
        }
        initCalled = true;
        if (originalInit) {
          return originalInit.apply(this, arguments);
        }
      };

      // Load CMS script
      const script = document.createElement('script');
      script.src = 'https://unpkg.com/decap-cms@3.8.0/dist/decap-cms.js';
      script.onload = function() {
        setTimeout(function() {
          const root = document.getElementById('nc-root');
          if (root && typeof CMS !== 'undefined' && window.CMS) {
            // Show root
            root.style.display = 'block';
            
            // Hide CMS login UI and show our header button
            const hideCMSLogin = function() {
              // Hide the CMS authentication page
              const authPage = root.querySelector('[class*="AuthenticationPage"]');
              if (authPage) {
                authPage.style.display = 'none';
              }
              
              // Find and hide the CMS login button, but trigger it from our header button
              const cmsLoginBtn = root.querySelector('button[class*="LoginButton"]');
              if (cmsLoginBtn) {
                const headerBtn = document.getElementById('header-login-btn');
                if (headerBtn) {
                  headerBtn.style.display = 'flex';
                  headerBtn.onclick = function() {
                    cmsLoginBtn.click();
                  };
                }
                cmsLoginBtn.style.display = 'none';
              }
            };
            
            // Initialize only if not already initialized
            if (!initCalled) {
              initCalled = true;
              try {
                window.CMS.init();
                // Wait a bit for CMS to render, then hide its login UI
                setTimeout(hideCMSLogin, 500);
                setTimeout(hideCMSLogin, 1000);
                setTimeout(hideCMSLogin, 2000);
              } catch (e) {
                console.error('Error initializing CMS:', e);
              }
            } else {
              // If already initialized, still try to hide login UI
              setTimeout(hideCMSLogin, 500);
            }
            
            // Watch for and remove duplicates aggressively
            const observer = new MutationObserver(function() {
              if (root.children.length > 1) {
                while (root.children.length > 1) {
                  root.removeChild(root.lastChild);
                }
              }
            });
            observer.observe(root, { childList: true, subtree: true });
            
            // Remove duplicates immediately and periodically
            function removeDuplicates() {
              if (root.children.length > 1) {
                while (root.children.length > 1) {
                  root.removeChild(root.lastChild);
                }
              }
              // Also hide Decap logo
              hideDecapLogo();
            }
            removeDuplicates();
            setTimeout(removeDuplicates, 100);
            setTimeout(removeDuplicates, 500);
            setTimeout(removeDuplicates, 1000);
            
            // Watch for Decap logo and hide it
            const logoObserver = new MutationObserver(function() {
              hideDecapLogo();
              // Also check for login button to move to header
              const cmsLoginBtn = root.querySelector('button[class*="LoginButton"]');
              if (cmsLoginBtn) {
                const headerBtn = document.getElementById('header-login-btn');
                if (headerBtn && headerBtn.style.display === 'none') {
                  headerBtn.style.display = 'flex';
                  headerBtn.onclick = function() {
                    cmsLoginBtn.click();
                  };
                }
                cmsLoginBtn.style.display = 'none';
              }
            });
            logoObserver.observe(root, { childList: true, subtree: true, characterData: true });
            
            // Run hideDecapLogo multiple times to catch it
            setTimeout(hideDecapLogo, 100);
            setTimeout(hideDecapLogo, 500);
            setTimeout(hideDecapLogo, 1000);
            setTimeout(hideDecapLogo, 2000);
          }
        }, 300);
      };
      document.head.appendChild(script);
    } else {
      console.warn('CMS already initialized, skipping...');
    }
  </script>
</body>
</html>

