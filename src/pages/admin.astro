---
// Admin page for Decap CMS
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager - LutzTalk</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      margin: 0;
      padding: 0;
      background: #f5f5f5;
    }
    .admin-header {
      background: #fff;
      border-bottom: 1px solid #e5e7eb;
      padding: 1rem 2rem;
      margin-bottom: 1rem;
    }
    .admin-header h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 600;
      color: #1a1a1a;
    }
    .admin-disclaimer {
      background: #fef3c7;
      border: 1px solid #fbbf24;
      border-radius: 0.5rem;
      padding: 1rem;
      margin: 0 2rem 1rem;
      color: #92400e;
    }
    .admin-disclaimer strong {
      display: block;
      margin-bottom: 0.5rem;
    }
    #nc-root {
      max-width: 1200px;
      margin: 0 auto;
    }
    /* Hide Decap CMS logo */
    [class*="nc-root"] [class*="logo"],
    [class*="nc-root"] a[href*="decapcms"],
    [class*="nc-root"] img[alt*="Decap"],
    [class*="nc-root"] img[alt*="Netlify"] {
      display: none !important;
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <h1>Content Manager</h1>
  </div>
  <div class="admin-disclaimer">
    <strong>⚠️ Authorized Personnel Only</strong>
    <p>This is a restricted area. Only authorized personnel with proper GitHub access to this repository may use this interface. Unauthorized access is prohibited.</p>
  </div>
  <div id="nc-root"></div>
  <script>
    // Suppress React errors - catch and ignore removeChild errors
    const originalRemoveChild = Node.prototype.removeChild;
    Node.prototype.removeChild = function(child) {
      try {
        return originalRemoveChild.call(this, child);
      } catch (e) {
        if (e instanceof Error && e.message && e.message.includes('not a child')) {
          return child; // Return the child to prevent error
        }
        throw e;
      }
    };

    // Set site_id for authentication - must match the domain
    const siteId = window.location.hostname === 'localhost' 
      ? 'localhost:4321' 
      : window.location.hostname;

    // Override fetch/XMLHttpRequest to modify auth URLs before CMS loads
    const originalFetch = window.fetch;
    window.fetch = function(...args) {
      if (args[0] && typeof args[0] === 'string' && args[0].includes('site_id=demo.decapcms.org')) {
        args[0] = args[0].replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
      }
      return originalFetch.apply(this, args);
    };

    // Override window.open to fix auth URLs
    const originalOpen = window.open;
    window.open = function(url, ...rest) {
      if (url && typeof url === 'string' && url.includes('site_id=demo.decapcms.org')) {
        url = url.replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
      }
      return originalOpen.call(this, url, ...rest);
    };
  </script>
  <script src="https://unpkg.com/decap-cms@3.8.0/dist/decap-cms.js"></script>
  <script>
    // Initialize CMS only once after script loads
    let cmsInitialized = false;
    (function() {
      function initCMS() {
        if (cmsInitialized) return;
        if (typeof CMS !== 'undefined' && window.CMS) {
          try {
            cmsInitialized = true;
            window.CMS.init();
          } catch (e) {
            console.error('Error initializing CMS:', e);
            cmsInitialized = false;
          }
        } else {
          setTimeout(initCMS, 100);
        }
      }
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          setTimeout(initCMS, 500);
        });
      } else {
        setTimeout(initCMS, 500);
      }
    })();
  </script>
</body>
</html>

