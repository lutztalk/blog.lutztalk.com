---
// Admin page for Decap CMS
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager - LutzTalk</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      margin: 0;
      padding: 0;
      background: #f5f5f5;
    }
    .admin-header {
      background: #fff;
      border-bottom: 1px solid #e5e7eb;
      padding: 1rem 2rem;
      margin-bottom: 1rem;
    }
    .admin-header h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 600;
      color: #1a1a1a;
    }
    .admin-disclaimer {
      background: #fef3c7;
      border: 1px solid #fbbf24;
      border-radius: 0.5rem;
      padding: 1rem;
      margin: 0 2rem 1rem;
      color: #92400e;
    }
    .admin-disclaimer strong {
      display: block;
      margin-bottom: 0.5rem;
    }
    #nc-root {
      max-width: 1200px;
      margin: 0 auto;
    }
    /* Hide Decap CMS logo and branding - aggressive selectors */
    [class*="nc-root"] [class*="logo"],
    [class*="nc-root"] a[href*="decapcms"],
    [class*="nc-root"] a[href*="netlify"],
    [class*="nc-root"] img[alt*="Decap"],
    [class*="nc-root"] img[alt*="Netlify"],
    [class*="nc-root"] svg[class*="logo"],
    a[href*="decapcms.org"],
    a[href*="netlify.com"],
    /* Hide the Decap logo text and icon */
    [class*="nc-root"] [class*="Decap"],
    [class*="nc-root"] [class*="decap"],
    [class*="nc-root"] [class*="logo"] + *,
    [class*="nc-root"] [class*="logo"] ~ *,
    /* Hide any element containing "Decap" text */
    [class*="nc-root"] *:contains("Decap"),
    /* Hide duplicate CMS instances - keep only the first one */
    #nc-root > div:not(:first-child) {
      display: none !important;
    }
    
    /* Show only the first CMS instance */
    #nc-root > div:first-child {
      display: block !important;
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <h1>Content Manager</h1>
  </div>
  <div class="admin-disclaimer">
    <strong>⚠️ Authorized Personnel Only</strong>
    <p>This is a restricted area. Only authorized personnel with proper GitHub access to this repository may use this interface. Unauthorized access is prohibited.</p>
  </div>
  <div id="nc-root" style="display: none;"></div>
  <script>
    // Function to hide Decap logo but preserve login button
    function hideDecapLogo() {
      const root = document.getElementById('nc-root');
      if (!root) return;
      
      // Only target elements that are clearly just the logo
      // Look for elements with exactly "Decap" text and no other content
      const allElements = root.querySelectorAll('*');
      allElements.forEach(el => {
        // Always skip buttons and anything inside buttons
        if (el.tagName === 'BUTTON' || 
            el.closest('button') || 
            el.closest('[role="button"]') ||
            el.closest('[class*="button"]') ||
            el.closest('[class*="login"]')) {
          return;
        }
        
        const text = (el.textContent || '').trim();
        const className = (el.className || '').toString();
        
        // Only hide if:
        // 1. Text is exactly "Decap" (5 characters, nothing else)
        // 2. OR has a logo class but is NOT a button
        // 3. AND doesn't contain "Login" or "GitHub" anywhere
        const isJustDecap = text === 'Decap' && text.length === 5;
        const hasLogoClass = className.includes('logo') && !className.includes('button');
        const hasNoLoginText = !text.includes('Login') && !text.includes('GitHub');
        
        if ((isJustDecap || hasLogoClass) && hasNoLoginText) {
          // Double check it's not inside a button
          let parent = el.parentElement;
          let isInsideButton = false;
          while (parent && parent !== root) {
            if (parent.tagName === 'BUTTON' || 
                parent.getAttribute('role') === 'button' ||
                (parent.className && parent.className.toString().includes('button'))) {
              isInsideButton = true;
              break;
            }
            parent = parent.parentElement;
          }
          
          if (!isInsideButton) {
            el.style.display = 'none';
            el.style.visibility = 'hidden';
            el.style.opacity = '0';
          }
        }
      });
    }
    
    // Prevent duplicate initialization
    if (!window.CMS_INITIALIZED) {
      window.CMS_INITIALIZED = true;

      // Suppress React errors - catch and ignore removeChild errors
      const originalRemoveChild = Node.prototype.removeChild;
      Node.prototype.removeChild = function(child) {
        try {
          return originalRemoveChild.call(this, child);
        } catch (e) {
          if (e instanceof Error && e.message && e.message.includes('not a child')) {
            return child;
          }
          throw e;
        }
      };

      // Set site_id for authentication
      const siteId = window.location.hostname === 'localhost' 
        ? 'localhost:4321' 
        : window.location.hostname;

      // Override fetch to modify auth URLs
      const originalFetch = window.fetch;
      window.fetch = function(...args) {
        if (args[0] && typeof args[0] === 'string' && args[0].includes('site_id=demo.decapcms.org')) {
          args[0] = args[0].replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
        }
        return originalFetch.apply(this, args);
      };

      // Override window.open to fix auth URLs
      const originalOpen = window.open;
      window.open = function(url, ...rest) {
        if (url && typeof url === 'string' && url.includes('site_id=demo.decapcms.org')) {
          url = url.replace('site_id=demo.decapcms.org', 'site_id=' + siteId);
        }
        return originalOpen.call(this, url, ...rest);
      };

      // Prevent auto-init by overriding CMS.init before script loads
      window.CMS = window.CMS || {};
      const originalInit = window.CMS.init;
      let initCalled = false;
      window.CMS.init = function() {
        if (initCalled) {
          console.warn('CMS.init already called, skipping duplicate');
          return;
        }
        initCalled = true;
        if (originalInit) {
          return originalInit.apply(this, arguments);
        }
      };

      // Load CMS script
      const script = document.createElement('script');
      script.src = 'https://unpkg.com/decap-cms@3.8.0/dist/decap-cms.js';
      script.onload = function() {
        setTimeout(function() {
          const root = document.getElementById('nc-root');
          if (root && typeof CMS !== 'undefined' && window.CMS) {
            // Show root
            root.style.display = 'block';
            
            // Initialize only if not already initialized
            if (!initCalled) {
              initCalled = true;
              try {
                window.CMS.init();
              } catch (e) {
                console.error('Error initializing CMS:', e);
              }
            }
            
            // Watch for and remove duplicates aggressively
            const observer = new MutationObserver(function() {
              if (root.children.length > 1) {
                while (root.children.length > 1) {
                  root.removeChild(root.lastChild);
                }
              }
            });
            observer.observe(root, { childList: true, subtree: true });
            
            // Remove duplicates immediately and periodically
            function removeDuplicates() {
              if (root.children.length > 1) {
                while (root.children.length > 1) {
                  root.removeChild(root.lastChild);
                }
              }
              // Also hide Decap logo
              hideDecapLogo();
            }
            removeDuplicates();
            setTimeout(removeDuplicates, 100);
            setTimeout(removeDuplicates, 500);
            setTimeout(removeDuplicates, 1000);
            
            // Watch for Decap logo and hide it
            const logoObserver = new MutationObserver(hideDecapLogo);
            logoObserver.observe(root, { childList: true, subtree: true, characterData: true });
            
            // Run hideDecapLogo multiple times to catch it
            setTimeout(hideDecapLogo, 100);
            setTimeout(hideDecapLogo, 500);
            setTimeout(hideDecapLogo, 1000);
            setTimeout(hideDecapLogo, 2000);
          }
        }, 300);
      };
      document.head.appendChild(script);
    } else {
      console.warn('CMS already initialized, skipping...');
    }
  </script>
</body>
</html>

