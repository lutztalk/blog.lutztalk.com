---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import StoryblokCard from "@/components/StoryblokCard.astro";
import EmailSubscribe from "@/components/EmailSubscribe.astro";
import SubscribeModal from "@/components/SubscribeModal.astro";
import { getStoryblokPosts, sortStoryblokPosts } from "@/utils/getStoryblokPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getStoryblokPosts();

// Debug logging in development
if (import.meta.env.DEV) {
  console.log(`[Index] Total posts fetched: ${posts.length}`);
  console.log(`[Index] Posts after filtering:`, posts.map(p => ({ title: p.data.title, draft: p.data.draft, slug: p.slug })));
}

const sortedPosts = sortStoryblokPosts(posts);
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const recentPosts = sortedPosts.filter(post => !post.data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <p>
        {SITE.desc}
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(post => (
              <StoryblokCard variant="h3" post={post} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (post, index) =>
                index < SITE.postPerIndex && <StoryblokCard variant="h3" post={post} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>

    <section class="my-12 pt-8 pb-6 border-t border-border">
      <h2 class="text-xl font-semibold tracking-wide mb-4 text-center">Stay Updated</h2>
      <p class="text-center text-foreground/80 mb-4">Get notified when new posts are published</p>
      <div class="max-w-md mx-auto">
        <EmailSubscribe variant="block" />
      </div>
    </section>
  </main>
  <Footer />
  <SubscribeModal />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
