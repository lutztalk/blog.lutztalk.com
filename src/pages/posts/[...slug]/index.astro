---
import StoryblokPostDetails from "@/layouts/StoryblokPostDetails.astro";
import { getStoryblokPosts, sortStoryblokPosts } from "@/utils/getStoryblokPosts";

export async function getStaticPaths() {
  const posts = await getStoryblokPosts();
  const sortedPosts = sortStoryblokPosts(posts);
  
  return sortedPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const allPosts = await getStoryblokPosts();
const sortedPosts = sortStoryblokPosts(allPosts);
---

<StoryblokPostDetails post={post} posts={sortedPosts} />
